


void status ( oRoom oMatMap[])
{ 
	oMatMap[0][0].sDescription = "You are in a normal-looking room";
	oMatMap[0][0].oArrInteractables[0].bCanOpen = true; // a door
	oMatMap[0][0].oArrInteractables[0].sDescrption = "You see a door to heading that heads East"
	oMatMap[0][0].bNorth = false;
	oMatMap[0][0].bSouth = false;
	oMatMap[0][0].bEast = false;
	oMatMap[0][0].bWest = false;
}
